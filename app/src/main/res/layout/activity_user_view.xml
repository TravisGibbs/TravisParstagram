<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:layoutMode="clipBounds"
    android:rowCount="5"
    android:rowOrderPreserved="false"
    android:visibility="visible"
    tools:context=".UserView">

    <ImageView
        android:id="@+id/gridIv1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_row="0"
        android:layout_column="1"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/gridIv2"
        android:layout_width="140dp"

        android:layout_height="140dp"
        android:layout_row="0"
        android:layout_column="2"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/gridIv3"
        android:layout_width="140dp"

        android:layout_height="140dp"
        android:layout_row="1"
        android:layout_column="0"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/gridIv4"
        android:layout_width="140dp"

        android:layout_height="140dp"
        android:layout_row="1"
        android:layout_column="1"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/gridIv5"
        android:layout_width="140dp"

        android:layout_height="140dp"
        android:layout_row="1"
        android:layout_column="2"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/UsernameGrid"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_row="0"
        android:layout_column="0"
        android:textAlignment="center"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/profileImageGrid"
        android:layout_width="80dp"

        android:layout_height="80dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/image_in_grid"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/girdIv6"
        android:layout_width="140dp"

        android:layout_height="140dp"
        android:layout_row="2"
        android:layout_column="0"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/gridIv7"
        android:layout_width="140dp"

        android:layout_height="140dp"
        android:layout_row="2"
        android:layout_column="1"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/gridIv8"
        android:layout_width="140dp"

        android:layout_height="140dp"
        android:layout_row="2"
        android:layout_column="2"
        android:contentDescription="@string/image_in_grid"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

</GridLayout>